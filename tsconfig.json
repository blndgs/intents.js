{
  "compilerOptions": {
    "moduleResolution": "node",
    "outDir": "./dist",
    "roots": ["./src","./test"],
    "module": "CommonJS",
    // Module system
    "target": "ES5",
    // Compilation target
    "declaration": true,
    "declarationDir": "./dist",
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["./src/**/*"],
  // Adjust if your files are in a different directory
  "exclude": ["node_modules", "test"]
}
